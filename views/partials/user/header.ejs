            padding: 0;
            margin: 0;
            display: flex;
            gap: 30px;
        }

        .main-menu ul li a {
            font-weight: 600;
            font-size: 16px;
            color: #333;
            text-transform: uppercase;
            text-decoration: none;
            padding: 8px;
            transition: color 0.3s ease;
        }


        .main-menu ul li a:hover {
            color: #ff6a00;
        }


        .main-menu {
            text-align: center;
            flex-grow: 1;
        }



        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #ffffff;
            min-width: 160px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: hidden;
            z-index: 1000;
            right: 0;
        }

        .dropdown-content a {
            color: #333;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }


        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }


        .main-menu .dropdown .dropdown-content {
            top: 100%;
            left: 0;
        }



        .logo img {
            max-height: 50px;
        }


        .header-action-icon-2 {
            margin-left: 15px;
            position: relative;
            display: inline-block;
        }

        .header-action-icon-2 img {
            width: 24px;
            height: 24px;
            transition: transform 0.3s ease;
        }


        .header-action-icon-2:hover img {
            transform: scale(1.1);
        }


        .search-style-2 input {
            padding: 8px 15px;
            border-radius: 20px;
            border: 1px solid #ddd;
            width: 100%;
            max-width: 300px;

        }




        @media (max-width: 991px) {
            .header-nav {
                display: none;
            }

            .search-style-2 input {
                width: 100%;
            }
        }


        .auth-buttons {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .auth-button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* Log In Button Style */
        .login-button {
            background-color: #00897b;
            color: white;
            margin-right: 10px;
        }

        .login-button:hover {
            background-color: #00796b;
        }

        /* Sign Up Button Style */
        .signup-button {
            background-color: #00897b;
            color: white;
        }

        .signup-button:hover {
            background-color: #00796b;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 7px;
            font-weight: 600;
            font-size: 16px;
            color: #333;
            text-transform: uppercase;
            text-decoration: none;
            padding: 8px;
            transition: color 0.6s ease;


        }

        .username {
            font-size: 16px;
            font-weight: 600;
            color: #c63939;
        }

        .logo {
            width: auto !important;
            height: auto !important;

        }

        .logo img {
            max-width: none !important;
            max-height: none !important;


