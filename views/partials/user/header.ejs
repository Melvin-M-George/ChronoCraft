    <style>
        
        .auth-button {
            padding: 10px 20px;
            margin: 10px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }


        .login-button {
            background-color: #00897B;
            color: white;
        }

        .login-button:hover {
            background-color: #00897B;
        }


