    background-repeat: no-repeat;
    background-position: right 12px center;
    background-size: 12px;
}


.sort-select:hover,
.sort-select:focus {
    border-color: #666;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    background-color: #fff;
}


.sort-select option:disabled {
    color: #aaa;
}

</style>

    
