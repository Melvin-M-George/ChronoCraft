<%- include('../partials/user/header') %>
<style>
    /* Global CSS Variables for a Colorful Palette */
    :root {
        --primary-color: #AECCC5; /* Main color */
        --secondary-color: #0A746E; /* Darker shade of primary */
        --accent-color: #00A08A; /* Lighter shade of primary */
        --background-light: #F4F8F9; /* Soft background color */
        --gray-text: #6c757d;
        --border-light: #E9ECEF;
        --card-shadow: rgba(0, 0, 0, 0.1);
    }

    /* General Styling for Coupons Section */
    .coupons-section {
        background-color: var(--background-light);
        padding: 50px 0;
        font-family: 'Arial', sans-serif;
    }

    /* Return Link Styling */
    .return-link a {
        color: var(--gray-text);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .return-link a:hover {
        color: var(--primary-color);
    }

    /* Section Title Styling */
    .section-title {
        font-size: 2rem;
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 15px;
    }

    .coupons-header p {
        color: var(--gray-text);
        font-size: 1rem;
    }

    /* Coupons List Styling */
    .coupons-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    /* Coupon Card Styling */
    .coupon-card {
        background-color: #ffffff;
        border: 2px solid var(--primary-color);
        border-radius: 12px;
        box-shadow: 0 4px 15px var(--card-shadow);
        overflow: hidden;
        max-width: 300px;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .coupon-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px var(--card-shadow);
        border-color: var(--secondary-color);
    }

    /* Coupon Card Header */
    .coupon-card-header {
        background-color: var(--primary-color);
        color: #ffffff;
        padding: 10px;
        text-align: center;
        font-size: 1.2rem;
        font-weight: bold;
    }

    /* Coupon Card Body */
    .coupon-card-body {
        padding: 20px;
        text-align: center;
    }

    .coupon-code,
    .coupon-discount,
    .coupon-minimum,
    .coupon-expiry {
        margin: 10px 0;
        color: var(--secondary-color);
        font-size: 1rem;
    }

    .coupon-code strong {
        color: var(--accent-color);
        font-size: 1.2rem;
    }

    /* Copy Button Styling */
    .copy-btn {
        background-color: var(--secondary-color);
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9rem;
        margin-top: 10px;
        transition: background-color 0.3s ease;
    }

    .copy-btn:hover {
        background-color: var(--accent-color);
    }

    /* Return Link Button Styling */
    .return-link {
        text-align: right;
        margin-bottom: 20px;
    }

    .return-link a {
        display: inline-block;
        background-color: var(--primary-color);
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .return-link a:hover {
        background-color: var(--secondary-color);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .coupons-section {
            padding: 30px 15px;
        }

        .section-title {
            font-size: 1.5rem;
        }

        .coupon-card-body {
            padding: 15px;
        }

        .coupon-code,
        .coupon-discount,
        .coupon-minimum,
        .coupon-expiry {
            font-size: 0.9rem;
        }
    }
</style>

<main class="main">
    <!-- Coupons Section -->
    <section class="coupons-section position-relative pt-50">
        <div class="container">
            <!-- Return to Dashboard Link -->
            <% if(productId){ %>
                <div class="return-link">
                    <a href="/checkout?id=<%= productId %>"><i class="fi-rs-angle-left"></i> Return to checkout</a>
                </div>
            <% }else{ %>
                <div class="return-link">
                    <a href="/checkout"><i class="fi-rs-angle-left"></i> Return to checkout</a>
                </div>
            <% } %>

            <!-- Coupons List Header -->
            <div class="coupons-header d-flex flex-column align-items-center mb-4 text-center">
                <h2 style="color: #00A08A;" class="section-title">Available Coupons</h2>
                <p>Exclusive discounts just for you!</p>
            </div>

            <!-- List of Coupons -->
            <% if (coupons && coupons.length > 0) { %>
                <div class="coupons-list d-flex flex-wrap justify-content-center gap-4">
                    <% coupons.forEach((coupon) => { %>
                        <div class="coupon-card">
                            <div class="coupon-card-header">
                                <br>
                            </div>
                            <div class="coupon-card-body">
                                <p class="coupon-code">Code: <strong><%= coupon.code %></strong></p>
                                <button class="copy-btn" onclick="copyCouponCode('<%= coupon.code %>')">Copy Code</button>
                                <p class="coupon-discount">Discount: <%= coupon.price %>% off</p>
                                <p class="coupon-minimum">Minimum Purchase: â‚¹<%= coupon.minimumAmount.toLocaleString() %></p>
                                <p class="coupon-expiry">Expires on: <%= coupon.endOn.toLocaleDateString() %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <h2 class="text-center">No coupons available right now</h2>
            <% } %>
        </div>
    </section>
</main>

<%- include('../partials/user/footer') %>

<script>
    // Function to copy coupon code to clipboard
    function copyCouponCode(code) {
        const textarea = document.createElement('textarea');
        textarea.value = code;
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);

        Swal.fire({
            icon: 'success',
            title: 'Coupon Code Copied',
            text: 'The coupon code has been copied to your clipboard.',
            confirmButtonColor: '#39b4ac',
        });
    }
</script>
